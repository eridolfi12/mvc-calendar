@{ 
    @model MvcCalendar.Models.Courses

    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.title = DateTime.Today.ToString("MMMM");
}

<script type="text/javascript">

    $.ajax({
        type: "GET",
        url: '@Url.Action("TestJSON", "Calendar")',
        success: function(xhr) {
            console.log(xhr);
        }
    });

</script>

<div class="cal-navigation">
    <ul>
        <li><a href="">Previous</a></li>
        <li><a href="">Next</a></li>
    </ul>
</div>

<table id="calendar">
    <caption>@Model.MonthText  @Model.Year</caption>
    <tr class="weekdays">
        <th scope="col">Sunday</th>
        <th scope="col">Monday</th>
        <th scope="col">Tuesday</th>
        <th scope="col">Wednesday</th>
        <th scope="col">Thursday</th>
        <th scope="col">Friday</th>
        <th scope="col">Saturday</th>
    </tr>

    @for (int r = 0; r <= Model.RowCount; r++)
    {
        if (r == Model.RowCount)
        {
            <tr class="days">
                @for (int j = 0; j < Model.DayOfWeekInt; j++)
                {
                    <td class="day other-month">
                        <!--<div class="date"></div>-->
                    </td>
                }

                @for (int i = 1; i <= Model.DaysInMonth; i++)
                {
                    <td class="day">
                        <div class="date">@i</div>
                    </td>
                }
            </tr>
            break;
        }
    }

</table>

