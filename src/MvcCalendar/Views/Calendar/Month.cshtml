@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.title = DateTime.Today.ToString("MMMM");

    DateTime now = DateTime.Today;
    var firstDayOfMonth = new DateTime(now.Year, now.Month, 1);
    int dayOfWeekInt = (int)firstDayOfMonth.DayOfWeek;
    var monthText = now.ToString("MMMM");
    var monthInt = now.Month;
    var year = now.Year;
    var daysInMonth = DateTime.DaysInMonth(year, monthInt);
    int rowCount = daysInMonth / 7;
    int nextMonth = now.Month + 1;
    int prevMonth = now.Month - 1;
}

<div class="cal-navigation">
    <ul>
        <li><a href="">Previous</a></li>
        <li><a href="">Next</a></li>
    </ul>
</div>

<table id="calendar">
    <caption>@monthText  @year</caption>
    <tr class="weekdays">
        <th scope="col">Sunday</th>
        <th scope="col">Monday</th>
        <th scope="col">Tuesday</th>
        <th scope="col">Wednesday</th>
        <th scope="col">Thursday</th>
        <th scope="col">Friday</th>
        <th scope="col">Saturday</th>
    </tr>

    @for (int r = 0; r <= rowCount; r++)
    {
        if (r == rowCount)
        {
            <tr class="days">
                @for (int j = 0; j < dayOfWeekInt; j++)
                {
                    <td class="day other-month">
                        <!--<div class="date"></div>-->
                    </td>
                }

                @for (int i = 1; i <= daysInMonth; i++)
                {
                    <td class="day">
                        <div class="date">@i</div>
                    </td>
                }
            </tr>
            break;
        }
    }

</table>

